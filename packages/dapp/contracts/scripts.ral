TxScript CreateFund(
  donera: Donera,
  uiDev: Address,
  uiFeeToken: ByteVec,
  uiFee: U256,
  name: ByteVec,
  description: ByteVec,
  beneficiary: Address,
  goal: U256,
  deadlineTimestamp: U256
) {
  if (uiFee > 0) {
    transferToken!(callerAddress!(), uiDev, uiFeeToken, uiFee)
  }

  // 1 alph for the subcontract that's created
  let requiredAssets =  donera.getAttoListingFee() + 1 alph
  donera.createFund{callerAddress!() -> ALPH: requiredAssets}(
    name,
    description,
    beneficiary,
    goal,
    deadlineTimestamp
  )
}

TxScript DonateToFund(
  donera: Donera,
  uiDev: Address,
  uiFeeToken: ByteVec,
  uiFee: U256,
  fundContractId: ByteVec,
  tokenId: ByteVec,
  amount: U256
) {
  if (uiFee > 0) {
    transferToken!(callerAddress!(), uiDev, uiFeeToken, uiFee)
  }

  donera.donateToFund{callerAddress!() -> tokenId: amount}(
    fundContractId,
    tokenId,
    amount
  )
}

TxScript FinalizeFund(
  donera: Donera,
  uiDev: Address,
  uiFeeToken: ByteVec,
  uiFee: U256,
  fundContractId: ByteVec
) {
  if (uiFee > 0) {
    transferToken!(callerAddress!(), uiDev, uiFeeToken, uiFee)
  }

  donera.finalizeFund(fundContractId)
}

TxScript SetAttoListingFee(
  donera: Donera,
  newAttoFee: U256
) {
  donera.setSelfAttoListingFee(newAttoFee)
}
